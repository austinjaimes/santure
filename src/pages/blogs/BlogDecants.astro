<style>

body {
  margin: 0;
  background-color: #f8f8ef;
  font-family: 'Segoe UI', sans-serif;
  color: #555;
  line-height: 1.8;
}

/* HERO */
.hero {
  height: 65vh;
  background-image: url('https://media.gq.com.mx/photos/5f03717b85180fb06783509c/master/pass/Cover.jpg');
  background-size: cover;
  background-position: center;
  position: relative;
  margin-top: 80px;
}

.hero-overlay {
  background: rgba(0,0,0,0.55);
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 20px;
  color: white;
  height: 59.5vh;
}

.hero h1 {
  font-size: 38px;
  max-width: 750px;
  margin-bottom: 20px;
}

.hero p {
  font-size: 18px;
  opacity: 0.95;
}

/* CONTENT WRAPPER */
.content-wrapper {
  display: flex;
  justify-content: center;
  padding: 80px 20px;
}

.content {
  max-width: 1050px;
  width: 100%;
  padding: 70px;
  border-radius: 25px;
  box-shadow: 0 15px 40px rgba(0,0,0,0.05);
  margin-top: -50px;
}

.intro {
  font-size: 20px;
  text-align: center;
  margin-bottom: 70px;
}

/* SECTIONS */
.section {
  display: flex;
  align-items: center;
  gap: 50px;
  margin-bottom: 90px;
}

.section.reverse {
  flex-direction: row-reverse;
}

.text {
  flex: 1;
}

.text h2 {
  font-size: 24px;
  color: #422222;
  margin-bottom: 18px;
}

.text p {
  margin-bottom: 14px;
}

.image {
  flex: 1;
  display: flex;
  justify-content: center;
}

.image img {
  width: 100%;
  max-width: 380px;
  height: 280px;
  object-fit: cover;
  border-radius: 18px;
  box-shadow: 0 8px 25px rgba(0,0,0,0.08);
  transition: transform 0.3s ease;
}

.image img:hover {
  transform: scale(1.03);
}

/* CONCLUSION */
.conclusion {
  text-align: center;
  background: white;
  padding: 50px;
  border-radius: 20px;
}

.conclusion h2 {
  color: #422222;
  margin-bottom: 20px;
}

.highlight {
  margin-top: 20px;
  font-weight: 600;
  color: #422222;
}

/* RESPONSIVE */
@media (max-width: 900px) {
  .content {
    padding: 40px 25px;
  }

  .section,
  .section.reverse {
    flex-direction: column;
    text-align: center;
  }

  .image img {
    height: 240px;
  }

  .hero h1 {
    font-size: 28px;
  }
}

</style>